<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E8E86E"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <RelativeLayout
        android:id="@+id/ttcanhan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#B5A946"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:padding="5dp"
        android:elevation="10dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/images"
            app:civ_border_width="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            app:civ_border_color="#F8BC07"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="Duy Le"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"

            android:text="Thành Viên Mới"
            android:fontFamily="cursive"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="197dp"
            android:layout_marginLeft="197dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_dot"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="29dp"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="210dp"
            android:text="3"
            android:textSize="20sp"

            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="34dp"
            android:layout_marginStart="225dp"
            android:layout_marginLeft="225dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/star"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="353dp"
            android:layout_marginLeft="353dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_thongbao" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignBottom="@+id/ttcanhan"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-152dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/thanhmenu"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tichdiemmmm"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tích Điểm"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/thanhmenu"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/drink"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt hàng"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/thanhmenu"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/wallet"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ví của tôi"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="23dp"
        android:text="Dành cho bạn"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        />
    <HorizontalScrollView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="13dp"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="300dp"

            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:layout_width="270dp"
                android:background="@drawable/thanhmenu"
                android:weightSum="5"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/sale1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="Mừng 100 nơi là nhà, checkin nhận quà"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:layout_width="270dp"
                android:background="@drawable/thanhmenu"
                android:weightSum="5"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:src="@drawable/nhanqua"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="mua nhiều tích điểm, đổi quà liền tay"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="23dp"
        android:text="Tin Tức"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        />
    <HorizontalScrollView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="13dp"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="300dp"

            >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/sale1"
                    android:background="@drawable/thanhmenu"
                    />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/sale1"
                android:background="@drawable/thanhmenu"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/sale1"
                android:background="@drawable/thanhmenu"
                />




        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>